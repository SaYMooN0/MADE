@inject IJSRuntime JSRuntime

<div class="tabs-header" id="tabs-header">
    @foreach (var tab in Tabs)
    {
        <div class="tab-item" @onmousedown="() => StartDragging(tab)">
            @tab.Name
        </div>
    }
</div>

@code {
    private class TabItem
    {
        public string Id { get; set; }
        public string Name { get; set; }
    }

    private List<TabItem> Tabs = new List<TabItem>
    {
        new TabItem { Id = "Tab1", Name = "Вкладка 1" },
        new TabItem { Id = "Tab2", Name = "Вкладка 2" }
        // добавьте другие вкладки по мере необходимости
    };

    private async Task StartDragging(TabItem tab)
    {
        await JSRuntime.InvokeVoidAsync("startDragging", tab.Id);
    }
}
