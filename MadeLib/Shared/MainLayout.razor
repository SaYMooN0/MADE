@inherits LayoutComponentBase
@namespace MadeLib.Shared
@inject IJSRuntime JSRuntime
@inject MadeLib.Src.ThemeCollection themeCollection


@code {
    protected override async Task OnInitializedAsync()
    {
        await SetTheme();
    }

    private async Task SetTheme()
    {
        await JSRuntime.InvokeVoidAsync("setTheme", themeCollection.CurrentTheme);
    }
}

<div class="page" @onload="SetTheme">
    <main>
        @Body
    </main>
</div>
